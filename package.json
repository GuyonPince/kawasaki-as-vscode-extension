{
	"name": "kawasaki-as-language",
	"displayName": "Kawasaki-AS-Language",
	"description": "VSCode Kawasaki AS language support",
	"version": "1.0.0",
	"publisher": "dRamosCode",
	"repository": { 
  	"type": "git", 
  	"url": "https://github.com/dRamosCode/kawasaki-as-vscode-extension" 
	} ,
	"categories": [
		"Programming Languages"
	],
	"license": "MIT",
	"engines": {
		"vscode": "^1.77.0"
	},
	"main": "./src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "as",
				"aliases": [
					"Kawasaki AS",
					"as"
				],
				"extensions": [
					".as"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "as",
				"scopeName": "source.as",
				"path": "./syntaxes/as.tmLanguage.json"
			}
		],
		"snippets": [
			{
			  "language": "as",
			  "path": "./snippets/as.json"
			}
		  ],
		"viewsContainers": {
			"activitybar": [
			  {
				"id": "project-structure",
				"title": "Project Structure",
				"icon": "./views/AS.png"
			  }
			]
		},
		"views": {
			"project-structure": [
			  {
				"id": "user",
				"name": "User Programs"
			  },
			  {
				"id": "system",
				"name": "System Programs"
			  },
			  {
				"id": "interface",
				"name": "IFP Programs"
			  }
			]
		},
		"commands": [
			{
			  "command": "project-structure.refreshPrograms",
			  "title": "Refresh Programs",
			  "icon": "$(refresh)"
			},
			{
				"command": "project-structure.copyProgram",
				"title": "Copy Program",
				"icon": "$(copy)"
			  }
		],
		"menus": {
		  "view/title": [
			{
			  "command": "project-structure.refreshPrograms",
			  "group": "navigation"
			}
		  ],
		  "view/item/context": [
			{
				"command": "project-structure.copyProgram",
				"group": "inline"
			}
		  ]
		}
	}
}
